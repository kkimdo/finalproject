<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration 
PUBLIC " - //mybatis.org//DTD Config 3.0//EN"
	   " http://mybatis.org/dtd/mybatis-3-config.dtd">
	
<configuration>	

	<typeAliases>  
	
		<!-- event -->
		<typeAlias alias="eventModel" type="movie.event.EventModel"/>
		
		<!-- notice --> 
		<typeAlias alias="noticeModel" type="movie.notice.NoticeModel" />
		
		<!-- freeBoard -->
		<typeAlias alias="freeBoardModel" type="movie.freeboard.FreeBoardModel"/>	   
		
		<!-- faq -->
		<typeAlias alias="faqModel" type="movie.faq.FaqModel" />	
		
		<!-- qna -->
		<typeAlias alias="qnaModel" type="movie.qna.QnaModel" />
		<typeAlias alias="qnaCommentModel" type="movie.qna.QnaCommentModel" />
		
	</typeAliases>
	
	<mappers>
	
		<!-- event -->
		<mapper resource="config/mybatis/event_SQL.xml"/>
	
		<!-- notice -->
		<mapper resource="config/mybatis/notice_SQL.xml"/>
		
		<!-- freeBoard -->
		<mapper resource="config/mybatis/freeBoard_SQL.xml"/>
		
		<!-- faq -->
		<mapper resource="config/mybatis/faq_SQL.xml"/>
		
		<!-- qna -->
		<mapper resource="config/mybatis/qna_SQL.xml"/>
	
	</mappers>
	
	
</configuration>